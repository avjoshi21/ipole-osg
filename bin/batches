if [ ! -f par/BATCH.ALL ]; then
	echo 'Generate parameter file'
	echo $1
	bin/pargen $1 > par/BATCH.ALL
	#echo -e "$(bin/pargen $1)\n"
fi

if [ ! -f par/*.p00 ]; then
	echo 'Split parameter file'
	split -da02 -l6000 par/BATCH.ALL par/batch.p
fi

echo 'Submit jobs'
for f in par/batch.p??; do
	g="par/BATCH_${1}.D${f#par/batch.p}"
	echo -n "$f -> $g"
	mkdir -p /public/avjoshi2/m87_v3_images/out/$1
	mkdir -p /public/avjoshi2/m87_v3_images/log/$1
	condor_submit -a "model = $1" bin/submit
	if [ $? == 1 ]; then
		echo STOP
		break # submission error
	fi
	mv -f "$f" "$g"
	echo 'DONE'
done
rm par/BATCH.ALL
